# ========================================
# Jarvis Configuration
# ========================================

# --- Feishu API (required) ---
FEISHU_APP_ID=cli_xxx
FEISHU_APP_SECRET=your_secret_here

# --- Database ---
DATABASE_URL=sqlite+aiosqlite:///./data/jarvis.db

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- Code Repository (optional, for code-aware analysis) ---
CODE_REPO_PATH=

# --- Linear API (for @ai-agent triggered analysis) ---
LINEAR_API_KEY=lin_api_xxx
LINEAR_WEBHOOK_SECRET=your_webhook_secret_here
LINEAR_TRIGGER_KEYWORD=@ai-agent
LINEAR_TEAM_ID=

# --- Zendesk API (optional, for ticket import) ---
ZENDESK_SUBDOMAIN=nicebuildllc
ZENDESK_EMAIL=
ZENDESK_API_TOKEN=

# --- OpenAI (optional, for Zendesk conversation summary) ---
OPENAI_API_KEY=
OPENAI_SUMMARY_MODEL=gpt-4o-mini

# --- Server ---
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
SECRET_KEY=change-me-to-a-random-string

# --- Ports (for docker-compose) ---
BACKEND_PORT=8000
FRONTEND_PORT=3000
