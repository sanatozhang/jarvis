# ======================
# Jarvis Configuration
# ======================

# --- Feishu API ---
FEISHU_APP_ID=cli_xxx
FEISHU_APP_SECRET=your_secret_here

# --- Redis (Task Queue) ---
REDIS_URL=redis://localhost:6379/0

# --- Database ---
DATABASE_URL=sqlite+aiosqlite:///./data/jarvis.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/jarvis

# --- LLM / Agent ---
# Claude Code (requires claude CLI installed)
CLAUDE_CODE_ENABLED=true
CLAUDE_CODE_MODEL=claude-sonnet-4-20250514

# Codex (requires codex CLI installed)
CODEX_ENABLED=false
CODEX_MODEL=o3

# --- Code Repository (for code-aware analysis) ---
CODE_REPO_PATH=/path/to/plaud-flutter-common

# --- Server ---
HOST=0.0.0.0
PORT=8000
WORKERS=1
LOG_LEVEL=info

# --- Security ---
SECRET_KEY=change-me-to-a-random-string
# Optional: Feishu OAuth for login
# FEISHU_OAUTH_APP_ID=
# FEISHU_OAUTH_APP_SECRET=
